include ../mixins/btn.pug

mixin post(header, img, text)
	.post
		h2(class="post-header")= header
		h4(class="post-date") December 26, 2019 â€” 5 comments
		img(class="post-img" src= img, alt="")
		p(class="post-text")= text
		.post-nav
			+btn("Read more","#!")(class= "btn")
